{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@jest/globals", "@testing-library/jest-dom", "jest-extended"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "main.js"
  ]
}