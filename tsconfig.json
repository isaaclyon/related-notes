{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["dom", "ES2020", "scripthost"],
    "types": ["node", "svelte", "vite/client"],
    "paths": {
      "src": ["src/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/*", "**/*.ts", "vite.config.ts"],
  "exclude": ["node_modules/*", "dist/*"]
}
